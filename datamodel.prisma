model User {
  id: ID! @id @unique @default(ciud())
  name: String!
  email: String @unique
  password: String!
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  posts: [Post!]!
}

model Post {
  id: ID! @id @unique @default(ciud())
  title: String!
  published: Boolean! @default(value: false)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  author: User @relation(link: INLINE)
}
